<!DOCTYpE html>

<html>

<head>
    <% include ../partials/updateHead.ejs %>
</head>

<body>
    <script type="text/javascript">
        if (<%= success %> == 1) {
            alert("ERROR: Invalid name for Tokimon, check if the name is empty or if the name only contains letters")
        }
    else if (<%= success %> == 2) {
            alert("ERROR: invalid name for trainer, please check if the trainer name is not empty or if it only contains letters")
        }
    else if (<%= success %> == 3) {
            alert("SUCCESS: Your  entry into the Tokidex is complete!")
        }
    </script>
    <!--Put if statements for errors lmao-->

    <div id="title">
        <h1 class="outTitle">Add a New Tokimon</h1>
        <div>
            <h1 class="innerTitle">Add a New Tokimon</h1>
        </div>
    </div>
    <div id="contentDiv">
        <div id="formDiv">
            <form method="post" action="/insert">
                <p>Tokimon Name:</p><input class="input" type="text" name="name" value="" required><br>
                <p>Weight:</p><input class="input" type="number" name="weight" value="" min="0" required><br>
                <p>Height:</p><input class="input" type="number" name="height" value="" min="0" required><br>
                <p>Fly:</p><input class="input" type="number" name="fly" min="0" max="100" value="" required><br>
                <p>Fight:</p><input class="input" type="number" name="fight" min="0" max="100" value="" required><br>
                <p>Fire:</p><input class="input" type="number" name="fire" min="0" max="100" value="" required><br>
                <p>Water:</p><input class=" input" type="number" name="water" min="0" max="100" value="" required><br>
                <p>Electric:</p><input class="input" type="number" name="electric" min="0" max="100" value="" required><br>
                <p>Ice:</p><input class="input" type="number" name="ice" min="0" max="100" value="" required><br>
                <p>Trainer Name:</p><input class="input" type="text" name="trainer" value="" required><br>
                <p>Description:</p><input class="input" type="text" name="description" value=""><br>
                <input type="submit" value="Submit" id="submitBut">
            </form>
            <div id="backDiv">
                <a href="/"><button id="backBut">Go Back</button></a>
            </div>
        </div>
    </div>
</body>

</html>